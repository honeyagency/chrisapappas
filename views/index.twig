{% extends "base.twig" %}
{% block content %}
	<section class="section--latest-posts max-wrap margin--center spacing--gutter content-box flex flex--wrap justify--between align--baseline ">
		{% if title %}<h1 class="grid--one text--center margin--top-5">{{title}}</h1>{% else %}<h1 class="article-h1 font--serif text--center">{{post.title}}</h1>{% endif %}
		{% if category.description %}<div class="grid--one"><div class="margin--center section--content text--center">{{category.description}}</div></div>{% endif %}
		{% for post in posts %}
			{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
		{% endfor %}
	</section>
	{% if results == 'none' %}
		{% include 'components/sections/section--no-search-results.twig' %}
	{% endif %}
{% endblock %}