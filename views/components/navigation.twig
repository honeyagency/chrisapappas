<nav role="navigation" class="text--center spacing--vert-1 spacing--gutter-mob">
<a href="{{site.url}}" class="logo"><i class="icon-logo--cp-gold" data-grunticon-embed></i></a>
	<ul>
		{% for item in menu.get_items %}
			<li class="nav-item {{item.classes | join(' ')}} spacing--horiz-2">
				<a class="nav-link color--black text--uppercase letter--1 hover--pink-bg five" href="{{item.get_link}}">{{item.title}}</a>
				{% if item.get_children %}
					<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item">
								<a class="nav-link color--black text--uppercase letter--1 hover--pink-bg five" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
		<li class="hidden--dsk">
		{{function("get_search_form")}}
	</li>
	</ul>
</nav><!-- #nav -->