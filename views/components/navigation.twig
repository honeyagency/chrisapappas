<nav role="navigation" class="text--center spacing--vert-1">
	<ul>
		{% for item in menu.get_items %}
			<li class="nav-item {{item.classes | join(' ')}} spacing--horiz-2">
				<a class="nav-link color--black text--uppercase letter--1" href="{{item.get_link}}">{{item.title}}</a>
				{% if item.get_children %}
					<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item">
								<a class="nav-link color--black text--uppercase letter--1" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
	</nav><!-- #nav -->