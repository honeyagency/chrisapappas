{% extends "base.twig" %}
{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="article-content max-wrap margin--center spacing--gutter">
			<div class="section--content margin--center spacing--vert-3">
				{% if title %}<h1 class="text--center margin--top-1 spacing--vert-1">{{title}}</h1>{% else %}<h1 class="article-h1 font--serif text--center">{{post.title}}</h1>{% endif %}
				{{post.content}}
			</div>
		</section>
	</article>
	
{% endblock %}