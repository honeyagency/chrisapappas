{% extends "base.twig" %}
{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="article-content max-wrap margin--center spacing--gutter">
			<div class="section--content margin--center spacing--vert-3">
				<h1 class="article-h1 text--center">{{post.title}}</h1>
				{{post.content}}
			</div>
		</section>
	</article>
	
{% endblock %}